  	<!-- 查询OS和IS -->
	<select id="getISAndOS" parameterType="map" resultType="map">
		SELECT
			u.*, r.role_id, r.role_code, r.role_name
		FROM
			`user` u
		LEFT JOIN user_role ur ON u.id = ur.user_id
		LEFT JOIN role r ON ur.role_id = r.role_id
		WHERE
			u.deleted = 1
		AND u.type = 1
		AND ur.deleted = 1
		AND r.deleted = 1
		AND (
			r.role_code = 'OS'
			OR r.role_code = 'IS'
		)
		<!-- GROUP BY
			u.id -->
	</select>
	<!-- 查询所有IS/OS，根据ID去重 -->
	<select id="getISAndOSUser" resultType="map">
		SELECT
			u.*
		FROM
			`user` u
		LEFT JOIN user_role ur ON u.id = ur.user_id
		LEFT JOIN role r ON ur.role_id = r.role_id
		WHERE
			u.deleted = 1
		AND u.type = 1
		AND ur.deleted = 1
		AND r.deleted = 1
		AND (
			r.role_code = 'OS'
			OR r.role_code = 'IS'
		)
		GROUP BY
			u.id
	</select>
	<!-- 根据ID查询用户 -->
	<select id="getById" parameterType="map" resultType="map">
		SELECT
			u.*, r.role_code, r.role_name
		FROM
			`user`
		WHERE
			deleted = 1
		AND type = 1
		AND id=#{userId}
	</select>
	
	<!-- 根据parentId(主帐号)查询:本帐号,其下的直接子帐号 -->
	<select id="getUsersByParentId"  resultType="map">
		SELECT
			u.*
		FROM
			`user` u		
		WHERE
			u.deleted=1 AND
			(u.id=#{pid} or u.parent_id=#{pid})	 		
	</select>
	
